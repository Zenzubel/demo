{{else if textarea}}
<label class="write-item" for="">
	<span class="write-item__label-text">{{labelText}}<sup class="write-item__sup">*</sup></span>
	<textarea id="" class="textarea textarea--write write-item__textarea" {{#if type}} type="{{type}}" {{else}}
		type="text" {{/if}} placeholder="{{placeholder}}" name=""></textarea>
</label>

{{else if input}}
<label class="write-item" for="">
